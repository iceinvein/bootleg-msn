{
	"name": "bootleg-msn-messenger",
	"private": true,
	"version": "0.3.3",
	"type": "module",
	"scripts": {
		"dev": "npm-run-all --parallel dev:frontend dev:backend",
		"dev:frontend": "vite --open",
		"dev:backend": "convex dev",
		"dev:tauri": "pnpm tauri dev",
		"dev:ios": "pnpm run build && npx cap run ios",
		"dev:android": "pnpm run build && npx cap run android",
		"setup:android": "node scripts/setup-android.js",
		"setup:mobile": "node scripts/setup-mobile.js",
		"build": "vite build",
		"build:netlify": "convex dev --once && vite build",
		"build:tauri": "pnpm tauri build",
		"build:mobile": "vite build && npx cap sync",
		"build:ios": "pnpm run build:mobile && npx cap build ios",
		"build:android": "pnpm run build:mobile && npx cap build android",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"lint": "tsc -p convex -noEmit --pretty false && tsc -p . -noEmit --pretty false && convex dev --once && vite build && biome check",
		"lint:b": "biome check",
		"lint:b:fix": "biome check --write",
		"version:patch": "npm version patch --no-git-tag-version && node scripts/update-deployment-info.js",
		"version:minor": "npm version minor --no-git-tag-version && node scripts/update-deployment-info.js",
		"version:major": "npm version major --no-git-tag-version && node scripts/update-deployment-info.js",
		"deployment:reset": "node scripts/reset-deployment-info.js",
		"migrate": "node scripts/run-migration.js",
		"test:migration": "node scripts/test-migration-integration.js",
		"prepare": "husky"
	},
	"dependencies": {
		"@auth/core": "0.37.0",
		"@capacitor/android": "^7.4.2",
		"@capacitor/app": "^7.0.2",
